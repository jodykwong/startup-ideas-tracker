---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// Check authentication
const { data: { session }, error } = await supabase.auth.getSession()

// Redirect to auth if not logged in (for now, we'll allow access for testing)
// if (!session) {
//   return Astro.redirect('/auth')
// }

const user = session?.user
---

<Layout title="控制台 - Startup Ideas Tracker">
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gradient">
            Startup Ideas Tracker
          </h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/dashboard" class="nav-link-active">控制台</a>
          <a href="/dashboard/ideas" class="nav-link">我的想法</a>
          <a href="/dashboard/analytics" class="nav-link">数据分析</a>
          <a href="/dashboard/settings" class="nav-link">设置</a>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center space-x-4">
          {user ? (
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-600">
                    {user.email?.charAt(0).toUpperCase()}
                  </span>
                </div>
                <span class="text-sm text-neutral-700 hidden sm:block">
                  {user.email}
                </span>
              </div>
              <button id="signout-btn" class="btn-ghost text-sm">
                退出登录
              </button>
            </div>
          ) : (
            <div class="flex items-center space-x-3">
              <a href="/auth" class="btn-ghost">登录</a>
              <a href="/auth" class="btn-primary">注册</a>
            </div>
          )}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 bg-neutral-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-primary-600 to-secondary-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <h1 class="text-3xl font-bold sm:text-4xl mb-4">
            {user ? `欢迎回来！` : '欢迎使用 Startup Ideas Tracker'}
          </h1>
          <p class="text-lg text-primary-100 mb-8">
            {user 
              ? '开始管理和评估您的创业想法，让每个创意都得到系统化的分析。'
              : '请先登录以开始管理您的创业想法。'
            }
          </p>
          {!user && (
            <a href="/auth" class="btn bg-white text-primary-600 hover:bg-primary-50 px-6 py-3 rounded-lg font-semibold">
              立即开始
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Dashboard Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {user ? (
        <!-- Authenticated Dashboard -->
        <div class="space-y-8">
          <!-- Quick Stats -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="card text-center">
              <div class="text-3xl font-bold text-primary-600 mb-2">0</div>
              <div class="text-sm text-neutral-600">总想法数</div>
            </div>
            <div class="card text-center">
              <div class="text-3xl font-bold text-secondary-600 mb-2">0</div>
              <div class="text-sm text-neutral-600">已评估</div>
            </div>
            <div class="card text-center">
              <div class="text-3xl font-bold text-accent-600 mb-2">0</div>
              <div class="text-sm text-neutral-600">AI增强</div>
            </div>
            <div class="card text-center">
              <div class="text-3xl font-bold text-success-600 mb-2">0</div>
              <div class="text-sm text-neutral-600">验证通过</div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="card">
            <h2 class="text-xl font-semibold text-neutral-900 mb-6">快速操作</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
              <button id="add-idea-btn" class="btn-primary justify-center p-4 h-auto flex-col space-y-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                <span>添加新想法</span>
              </button>

              <button id="ai-enhance-btn" class="btn-secondary justify-center p-4 h-auto flex-col space-y-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
                <span>AI增强</span>
              </button>

              <button id="view-analytics-btn" class="btn-secondary justify-center p-4 h-auto flex-col space-y-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                <span>查看分析</span>
              </button>
            </div>
          </div>

          <!-- Recent Ideas -->
          <div class="card">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-xl font-semibold text-neutral-900">最近的想法</h2>
              <a href="/dashboard/ideas" class="text-primary-600 hover:text-primary-500 text-sm font-medium">
                查看全部 →
              </a>
            </div>
            
            <div class="text-center py-12">
              <div class="w-16 h-16 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-neutral-900 mb-2">还没有想法</h3>
              <p class="text-neutral-600 mb-4">开始记录您的第一个创业想法吧！</p>
              <button id="add-first-idea-btn" class="btn-primary">
                添加想法
              </button>
            </div>
          </div>
        </div>
      ) : (
        <!-- Unauthenticated Dashboard -->
        <div class="text-center py-12">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-4">请先登录</h2>
          <p class="text-neutral-600 mb-6">
            登录您的账户以开始管理创业想法，或创建新账户开始您的创业之旅。
          </p>
          <div class="flex items-center justify-center space-x-4">
            <a href="/auth" class="btn-primary">登录</a>
            <a href="/auth" class="btn-secondary">注册</a>
          </div>
        </div>
      )}
    </div>
  </main>
</Layout>

<script>
  // Sign out functionality
  document.getElementById('signout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })

      const result = await response.json()

      if (result.success) {
        window.location.href = '/auth'
      } else {
        alert('退出登录失败，请重试')
      }
    } catch (error) {
      alert('网络错误，请重试')
    }
  })

  // Quick action buttons
  document.getElementById('add-idea-btn')?.addEventListener('click', () => {
    window.location.href = '/dashboard/ideas'
  })

  document.getElementById('add-first-idea-btn')?.addEventListener('click', () => {
    window.location.href = '/dashboard/ideas'
  })

  document.getElementById('ai-enhance-btn')?.addEventListener('click', () => {
    alert('AI增强功能开发中，敬请期待！\n\n即将支持：\n• 市场分析和竞争对手研究\n• 功能建议和产品优化\n• 商业模式分析')
  })

  document.getElementById('view-analytics-btn')?.addEventListener('click', () => {
    window.location.href = '/dashboard/analytics'
  })

  // Register service worker
  if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
      navigator.serviceWorker.register('/sw.js')
        .then((registration) => {
          console.log('SW registration successful: ', registration.scope)
        })
        .catch((registrationError) => {
          console.log('SW registration failed: ', registrationError)
        })
    })
  }
</script>
