---
// Test API page
---

<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Test Page</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .test-section { margin: 20px 0; padding: 15px; border: 1px solid #ccc; }
        button { padding: 10px 15px; margin: 5px; cursor: pointer; }
        .result { margin-top: 10px; padding: 10px; background: #f5f5f5; }
    </style>
</head>
<body>
    <h1>API 测试页面</h1>
    
    <div class="test-section">
        <h2>数据库连接测试</h2>
        <button onclick="testDB()">测试数据库连接</button>
        <div id="db-result" class="result"></div>
    </div>
    
    <div class="test-section">
        <h2>用户注册测试</h2>
        <input type="email" id="email" placeholder="邮箱" value="test@example.com">
        <input type="password" id="password" placeholder="密码" value="testpass123">
        <button onclick="testSignup()">测试注册</button>
        <div id="signup-result" class="result"></div>
    </div>
    
    <div class="test-section">
        <h2>用户登录测试</h2>
        <input type="email" id="signin-email" placeholder="邮箱" value="test@example.com">
        <input type="password" id="signin-password" placeholder="密码" value="testpass123">
        <button onclick="testSignin()">测试登录</button>
        <div id="signin-result" class="result"></div>
    </div>

    <div class="test-section">
        <h2>Gemini AI 测试</h2>
        <button onclick="testGemini()">测试Gemini连接</button>
        <div id="gemini-result" class="result"></div>
    </div>

    <div class="test-section">
        <h2>AI 增强测试</h2>
        <input type="text" id="idea-title" placeholder="想法标题" value="智能健身助手">
        <textarea id="idea-description" placeholder="想法描述" rows="3">一个基于AI的个人健身助手应用，能够根据用户的身体状况和目标制定个性化的健身计划。</textarea>
        <select id="enhancement-mode">
            <option value="expand_description">扩展描述</option>
            <option value="improve_problem_statement">改进问题陈述</option>
            <option value="enhance_solution">增强解决方案</option>
        </select>
        <button onclick="testAIEnhance()">测试AI增强</button>
        <div id="ai-enhance-result" class="result"></div>
    </div>

    <script>
        async function testDB() {
            const result = document.getElementById('db-result');
            try {
                const response = await fetch('/api/test/db');
                const data = await response.json();
                result.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            } catch (error) {
                result.innerHTML = `<span style="color: red;">错误: ${error.message}</span>`;
            }
        }

        async function testSignup() {
            const result = document.getElementById('signup-result');
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            try {
                const response = await fetch('/api/auth/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, password })
                });
                const data = await response.json();
                result.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            } catch (error) {
                result.innerHTML = `<span style="color: red;">错误: ${error.message}</span>`;
            }
        }

        async function testSignin() {
            const result = document.getElementById('signin-result');
            const email = document.getElementById('signin-email').value;
            const password = document.getElementById('signin-password').value;

            try {
                const response = await fetch('/api/auth/signin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, password })
                });
                const data = await response.json();
                result.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            } catch (error) {
                result.innerHTML = `<span style="color: red;">错误: ${error.message}</span>`;
            }
        }

        async function testGemini() {
            const result = document.getElementById('gemini-result');
            try {
                const response = await fetch('/api/test/gemini');
                const data = await response.json();
                result.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            } catch (error) {
                result.innerHTML = `<span style="color: red;">错误: ${error.message}</span>`;
            }
        }

        async function testAIEnhance() {
            const result = document.getElementById('ai-enhance-result');
            const title = document.getElementById('idea-title').value;
            const description = document.getElementById('idea-description').value;
            const mode = document.getElementById('enhancement-mode').value;

            try {
                const response = await fetch('/api/ai/enhance', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        mode,
                        title,
                        description
                    })
                });
                const data = await response.json();
                result.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            } catch (error) {
                result.innerHTML = `<span style="color: red;">错误: ${error.message}</span>`;
            }
        }
    </script>
</body>
</html>
