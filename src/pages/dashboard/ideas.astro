---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// Check authentication
const { data: { session }, error } = await supabase.auth.getSession()

// Redirect to auth if not logged in (for now, we'll allow access for testing)
// if (!session) {
//   return Astro.redirect('/auth')
// }

const user = session?.user

// Fetch user's ideas (mock data for now)
const ideas = []
---

<Layout title="我的想法 - Startup Ideas Tracker">
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gradient">
            <a href="/dashboard">Startup Ideas Tracker</a>
          </h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/dashboard" class="nav-link">控制台</a>
          <a href="/dashboard/ideas" class="nav-link-active">我的想法</a>
          <a href="/dashboard/analytics" class="nav-link">数据分析</a>
          <a href="/dashboard/settings" class="nav-link">设置</a>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center space-x-4">
          {user ? (
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-600">
                    {user.email?.charAt(0).toUpperCase()}
                  </span>
                </div>
                <span class="text-sm text-neutral-700 hidden sm:block">
                  {user.email}
                </span>
              </div>
              <button id="signout-btn" class="btn-ghost text-sm">
                退出登录
              </button>
            </div>
          ) : (
            <div class="flex items-center space-x-3">
              <a href="/auth" class="btn-ghost">登录</a>
              <a href="/auth" class="btn-primary">注册</a>
            </div>
          )}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 bg-neutral-50">
    <!-- Header -->
    <div class="bg-white border-b border-neutral-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-neutral-900">我的想法</h1>
            <p class="text-neutral-600 mt-1">管理和评估您的创业想法</p>
          </div>
          <button id="add-idea-btn" class="btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            添加新想法
          </button>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {user ? (
        <div class="space-y-6">
          <!-- Filters and Search -->
          <div class="card">
            <div class="flex flex-col sm:flex-row gap-4">
              <div class="flex-1">
                <input 
                  type="text" 
                  placeholder="搜索想法..." 
                  class="w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
              <div class="flex gap-2">
                <select class="px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500">
                  <option value="">所有状态</option>
                  <option value="draft">草稿</option>
                  <option value="evaluating">评估中</option>
                  <option value="validated">已验证</option>
                  <option value="developing">开发中</option>
                </select>
                <select class="px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500">
                  <option value="">所有分类</option>
                  <option value="saas">SaaS</option>
                  <option value="mobile">移动应用</option>
                  <option value="ecommerce">电商</option>
                  <option value="ai">AI/ML</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Ideas Grid -->
          {ideas.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {ideas.map((idea) => (
                <div class="card hover:shadow-lg transition-shadow cursor-pointer">
                  <div class="flex items-start justify-between mb-3">
                    <h3 class="font-semibold text-neutral-900 line-clamp-2">{idea.title}</h3>
                    <span class="px-2 py-1 text-xs rounded-full bg-primary-100 text-primary-700">
                      {idea.status}
                    </span>
                  </div>
                  <p class="text-neutral-600 text-sm mb-4 line-clamp-3">{idea.description}</p>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-neutral-500">{idea.created_at}</span>
                    <div class="flex items-center space-x-2">
                      <span class="text-neutral-500">评分:</span>
                      <span class="font-medium text-primary-600">{idea.score || 'N/A'}</span>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <!-- Empty State -->
            <div class="card text-center py-12">
              <div class="w-16 h-16 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-neutral-900 mb-2">还没有想法</h3>
              <p class="text-neutral-600 mb-6">开始记录您的第一个创业想法吧！AI将帮助您分析和改进它。</p>
              <button id="add-first-idea-btn" class="btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                添加第一个想法
              </button>
            </div>
          )}
        </div>
      ) : (
        <!-- Unauthenticated State -->
        <div class="card text-center py-12">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-4">请先登录</h2>
          <p class="text-neutral-600 mb-6">登录以查看和管理您的创业想法</p>
          <a href="/auth" class="btn-primary">立即登录</a>
        </div>
      )}
    </div>
  </main>

  <!-- Add Idea Modal (placeholder) -->
  <div id="add-idea-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
      <h3 class="text-lg font-semibold mb-4">添加新想法</h3>
      <p class="text-neutral-600 mb-4">功能开发中，敬请期待...</p>
      <div class="flex justify-end space-x-3">
        <button id="close-modal-btn" class="btn-ghost">取消</button>
        <button class="btn-primary">保存</button>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Sign out functionality
  document.getElementById('signout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })

      const result = await response.json()

      if (result.success) {
        window.location.href = '/auth'
      } else {
        alert('退出登录失败，请重试')
      }
    } catch (error) {
      alert('网络错误，请重试')
    }
  })

  // Add idea modal functionality
  const addIdeaBtn = document.getElementById('add-idea-btn')
  const addFirstIdeaBtn = document.getElementById('add-first-idea-btn')
  const modal = document.getElementById('add-idea-modal')
  const closeModalBtn = document.getElementById('close-modal-btn')

  function showModal() {
    modal?.classList.remove('hidden')
    modal?.classList.add('flex')
  }

  function hideModal() {
    modal?.classList.add('hidden')
    modal?.classList.remove('flex')
  }

  addIdeaBtn?.addEventListener('click', showModal)
  addFirstIdeaBtn?.addEventListener('click', showModal)
  closeModalBtn?.addEventListener('click', hideModal)

  // Close modal when clicking outside
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      hideModal()
    }
  })
</script>
