---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// Check authentication
const { data: { session } } = await supabase.auth.getSession()

// Redirect to auth if not logged in (for now, we'll allow access for testing)
// if (!session) {
//   return Astro.redirect('/auth')
// }

const user = session?.user

// Fetch user's ideas (mock data for now)
const ideas: any[] = []
---

<Layout title="我的想法 - Startup Ideas Tracker">
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gradient">
            <a href="/dashboard">Startup Ideas Tracker</a>
          </h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/dashboard" class="nav-link">控制台</a>
          <a href="/dashboard/ideas" class="nav-link-active">我的想法</a>
          <a href="/dashboard/analytics" class="nav-link">数据分析</a>
          <a href="/dashboard/settings" class="nav-link">设置</a>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center space-x-4">
          {user ? (
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-600">
                    {user.email?.charAt(0).toUpperCase()}
                  </span>
                </div>
                <span class="text-sm text-neutral-700 hidden sm:block">
                  {user.email}
                </span>
              </div>
              <button id="signout-btn" class="btn-ghost text-sm">
                退出登录
              </button>
            </div>
          ) : (
            <div class="flex items-center space-x-3">
              <a href="/auth" class="btn-ghost">登录</a>
              <a href="/auth" class="btn-primary">注册</a>
            </div>
          )}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 bg-neutral-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-primary-600 to-secondary-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold sm:text-4xl mb-2">我的想法</h1>
            <p class="text-lg text-primary-100">管理和评估您的创业想法，让每个创意都得到系统化的分析</p>
          </div>
          <div class="hidden sm:block">
            <button id="add-idea-btn" class="btn bg-white text-primary-600 hover:bg-primary-50 px-6 py-3 rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              添加新想法
            </button>
          </div>
        </div>
        <!-- Mobile Add Button -->
        <div class="sm:hidden mt-6">
          <button id="add-idea-btn-mobile" class="btn bg-white text-primary-600 hover:bg-primary-50 w-full justify-center px-6 py-3 rounded-lg font-semibold shadow-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            添加新想法
          </button>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {user ? (
        <div class="space-y-8">
          <!-- Filters and Search -->
          <div class="card-elevated">
            <div class="flex flex-col sm:flex-row gap-4">
              <div class="flex-1">
                <div class="relative">
                  <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                  <input
                    type="text"
                    placeholder="搜索想法..."
                    class="input pl-10"
                  />
                </div>
              </div>
              <div class="flex gap-3">
                <select class="input min-w-32">
                  <option value="">所有状态</option>
                  <option value="draft">草稿</option>
                  <option value="evaluating">评估中</option>
                  <option value="validated">已验证</option>
                  <option value="developing">开发中</option>
                </select>
                <select class="input min-w-32">
                  <option value="">所有分类</option>
                  <option value="saas">SaaS</option>
                  <option value="mobile">移动应用</option>
                  <option value="ecommerce">电商</option>
                  <option value="ai">AI/ML</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Ideas Grid -->
          {ideas.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {ideas.map((idea) => (
                <div class="card hover:shadow-lg transition-shadow cursor-pointer">
                  <div class="flex items-start justify-between mb-3">
                    <h3 class="font-semibold text-neutral-900 line-clamp-2">{idea.title}</h3>
                    <span class="px-2 py-1 text-xs rounded-full bg-primary-100 text-primary-700">
                      {idea.status}
                    </span>
                  </div>
                  <p class="text-neutral-600 text-sm mb-4 line-clamp-3">{idea.description}</p>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-neutral-500">{idea.created_at}</span>
                    <div class="flex items-center space-x-2">
                      <span class="text-neutral-500">评分:</span>
                      <span class="font-medium text-primary-600">{idea.score || 'N/A'}</span>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <!-- Empty State -->
            <div class="card text-center py-12">
              <div class="w-16 h-16 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-neutral-900 mb-2">还没有想法</h3>
              <p class="text-neutral-600 mb-6">开始记录您的第一个创业想法吧！AI将帮助您分析和改进它。</p>
              <button id="add-first-idea-btn" class="btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                添加第一个想法
              </button>
            </div>
          )}
        </div>
      ) : (
        <!-- Unauthenticated State -->
        <div class="space-y-8">
          <!-- Welcome Card -->
          <div class="card-elevated text-center py-12">
            <div class="w-20 h-20 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h2 class="text-3xl font-bold text-neutral-900 mb-4">欢迎使用创业想法追踪器</h2>
            <p class="text-lg text-neutral-600 mb-6 max-w-2xl mx-auto">
              管理和评估您的创业想法，使用AI增强分析和Paul Graham的Deep Well评估框架，让每个创意都得到系统化的分析和验证。
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/auth" class="btn-primary text-lg px-8 py-3">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                </svg>
                立即登录
              </a>
              <a href="/auth?mode=register" class="btn btn-secondary text-lg px-8 py-3">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
                免费注册
              </a>
            </div>
          </div>

          <!-- Features Preview -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="card text-center">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">想法管理</h3>
              <p class="text-sm text-neutral-600">系统化记录和组织您的创业想法，永不遗失灵感</p>
            </div>

            <div class="card text-center">
              <div class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">AI增强分析</h3>
              <p class="text-sm text-neutral-600">利用人工智能深度分析想法的可行性和市场潜力</p>
            </div>

            <div class="card text-center">
              <div class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Deep Well评估</h3>
              <p class="text-sm text-neutral-600">基于Paul Graham框架评估想法的用户需求强度</p>
            </div>
          </div>
        </div>
      )}
    </div>
  </main>

  <!-- Add Idea Modal (placeholder) -->
  <div id="add-idea-modal" class="modal-overlay hidden">
    <div class="modal-content">
      <h3 class="text-lg font-semibold mb-4">添加新想法</h3>
      <p class="text-neutral-600 mb-4">功能开发中，敬请期待...</p>
      <div class="flex justify-end space-x-3">
        <button id="close-modal-btn" class="btn-ghost">取消</button>
        <button class="btn-primary">保存</button>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Sign out functionality
  document.getElementById('signout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })

      const result = await response.json()

      if (result.success) {
        window.location.href = '/auth'
      } else {
        alert('退出登录失败，请重试')
      }
    } catch (error) {
      alert('网络错误，请重试')
    }
  })

  // Add idea modal functionality
  const addIdeaBtn = document.getElementById('add-idea-btn')
  const addIdeaBtnMobile = document.getElementById('add-idea-btn-mobile')
  const addFirstIdeaBtn = document.getElementById('add-first-idea-btn')
  const modal = document.getElementById('add-idea-modal')
  const closeModalBtn = document.getElementById('close-modal-btn')

  function showModal() {
    modal?.classList.remove('hidden')
    modal?.classList.add('flex')
  }

  function hideModal() {
    modal?.classList.add('hidden')
    modal?.classList.remove('flex')
  }

  addIdeaBtn?.addEventListener('click', showModal)
  addIdeaBtnMobile?.addEventListener('click', showModal)
  addFirstIdeaBtn?.addEventListener('click', showModal)
  closeModalBtn?.addEventListener('click', hideModal)

  // Close modal when clicking outside
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      hideModal()
    }
  })
</script>
