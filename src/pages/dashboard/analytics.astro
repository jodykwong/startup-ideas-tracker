---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// Check authentication
const { data: { session }, error } = await supabase.auth.getSession()

// Redirect to auth if not logged in (for now, we'll allow access for testing)
// if (!session) {
//   return Astro.redirect('/auth')
// }

const user = session?.user

// Mock analytics data
const analytics = {
  totalIdeas: 0,
  evaluatedIdeas: 0,
  aiEnhanced: 0,
  validated: 0,
  averageScore: 0,
  topCategories: [],
  recentActivity: []
}
---

<Layout title="数据分析 - Startup Ideas Tracker">
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gradient">
            <a href="/dashboard">Startup Ideas Tracker</a>
          </h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/dashboard" class="nav-link">控制台</a>
          <a href="/dashboard/ideas" class="nav-link">我的想法</a>
          <a href="/dashboard/analytics" class="nav-link-active">数据分析</a>
          <a href="/dashboard/settings" class="nav-link">设置</a>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center space-x-4">
          {user ? (
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-600">
                    {user.email?.charAt(0).toUpperCase()}
                  </span>
                </div>
                <span class="text-sm text-neutral-700 hidden sm:block">
                  {user.email}
                </span>
              </div>
              <button id="signout-btn" class="btn-ghost text-sm">
                退出登录
              </button>
            </div>
          ) : (
            <div class="flex items-center space-x-3">
              <a href="/auth" class="btn-ghost">登录</a>
              <a href="/auth" class="btn-primary">注册</a>
            </div>
          )}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 bg-neutral-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-secondary-600 to-primary-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold sm:text-4xl mb-2">数据分析</h1>
            <p class="text-lg text-secondary-100">深入了解您的创业想法表现，基于数据做出明智决策</p>
          </div>
          <div class="hidden sm:flex space-x-3">
            <select class="bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-white/50">
              <option value="7" class="text-neutral-900">最近7天</option>
              <option value="30" class="text-neutral-900">最近30天</option>
              <option value="90" class="text-neutral-900">最近90天</option>
              <option value="365" class="text-neutral-900">最近一年</option>
            </select>
            <button class="btn bg-white text-secondary-600 hover:bg-secondary-50 px-6 py-2 rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              导出报告
            </button>
          </div>
        </div>
        <!-- Mobile Controls -->
        <div class="sm:hidden mt-6 space-y-3">
          <select class="bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-lg px-4 py-2 w-full focus:ring-2 focus:ring-white/50">
            <option value="7" class="text-neutral-900">最近7天</option>
            <option value="30" class="text-neutral-900">最近30天</option>
            <option value="90" class="text-neutral-900">最近90天</option>
            <option value="365" class="text-neutral-900">最近一年</option>
          </select>
          <button class="btn bg-white text-secondary-600 hover:bg-secondary-50 w-full justify-center px-6 py-2 rounded-lg font-semibold shadow-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            导出报告
          </button>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {user ? (
        <div class="space-y-8">
          <!-- Key Metrics -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="card-elevated text-center group hover:scale-105 transition-transform duration-300">
              <div class="text-3xl font-bold text-primary-600 mb-2 group-hover:text-primary-700 transition-colors">{analytics.totalIdeas}</div>
              <div class="text-sm text-neutral-600 mb-1">总想法数</div>
              <div class="flex items-center justify-center text-xs text-green-600">
                <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 0.75rem; height: 0.75rem; max-width: 0.75rem; max-height: 0.75rem;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                +0% 本周
              </div>
            </div>
            <div class="card-elevated text-center group hover:scale-105 transition-transform duration-300">
              <div class="text-3xl font-bold text-secondary-600 mb-2 group-hover:text-secondary-700 transition-colors">{analytics.evaluatedIdeas}</div>
              <div class="text-sm text-neutral-600 mb-1">已评估</div>
              <div class="flex items-center justify-center text-xs text-green-600">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                +0% 本周
              </div>
            </div>
            <div class="card-elevated text-center group hover:scale-105 transition-transform duration-300">
              <div class="text-3xl font-bold text-accent-600 mb-2 group-hover:text-accent-700 transition-colors">{analytics.aiEnhanced}</div>
              <div class="text-sm text-neutral-600 mb-1">AI增强</div>
              <div class="flex items-center justify-center text-xs text-green-600">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                +0% 本周
              </div>
            </div>
            <div class="card-elevated text-center group hover:scale-105 transition-transform duration-300">
              <div class="text-3xl font-bold text-success-600 mb-2 group-hover:text-success-700 transition-colors">{analytics.validated}</div>
              <div class="text-sm text-neutral-600 mb-1">验证通过</div>
              <div class="flex items-center justify-center text-xs text-green-600">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                +0% 本周
              </div>
            </div>
          </div>

          <!-- Charts Row -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Ideas Over Time Chart -->
            <div class="card">
              <h3 class="text-lg font-semibold text-neutral-900 mb-4">想法趋势</h3>
              <div class="h-64 bg-neutral-50 rounded-lg flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-12 h-12 text-neutral-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  <p class="text-neutral-600">暂无数据</p>
                  <p class="text-sm text-neutral-500">添加想法后查看趋势</p>
                </div>
              </div>
            </div>

            <!-- Category Distribution -->
            <div class="card">
              <h3 class="text-lg font-semibold text-neutral-900 mb-4">分类分布</h3>
              <div class="h-64 bg-neutral-50 rounded-lg flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-12 h-12 text-neutral-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
                  </svg>
                  <p class="text-neutral-600">暂无数据</p>
                  <p class="text-sm text-neutral-500">添加想法后查看分布</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Deep Well Analysis -->
          <div class="card">
            <h3 class="text-lg font-semibold text-neutral-900 mb-4">Deep Well 分析</h3>
            <p class="text-neutral-600 mb-6">基于Paul Graham的评估框架，分析想法的用户需求强度和市场潜力</p>
            <div class="h-80 bg-neutral-50 rounded-lg flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 002 2h2a2 2 0 012-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 00-2 2v6a2 2 0 01-2 2H9a2 2 0 01-2-2z"/>
                </svg>
                <h4 class="text-lg font-medium text-neutral-900 mb-2">Deep Well 象限图</h4>
                <p class="text-neutral-600 mb-4">暂无评估数据</p>
                <p class="text-sm text-neutral-500">完成想法评估后，这里将显示您的想法在Deep Well象限中的分布</p>
              </div>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="card">
            <h3 class="text-lg font-semibold text-neutral-900 mb-4">最近活动</h3>
            {analytics.recentActivity.length > 0 ? (
              <div class="space-y-3">
                {analytics.recentActivity.map((activity) => (
                  <div class="flex items-center space-x-3 p-3 bg-neutral-50 rounded-lg">
                    <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <p class="text-sm text-neutral-900">{activity.description}</p>
                      <p class="text-xs text-neutral-500">{activity.timestamp}</p>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-neutral-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-neutral-600">暂无活动记录</p>
                <p class="text-sm text-neutral-500">开始使用平台后，您的活动将在这里显示</p>
              </div>
            )}
          </div>
        </div>
      ) : (
        <!-- Unauthenticated State -->
        <div class="card text-center py-12">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-4">请先登录</h2>
          <p class="text-neutral-600 mb-6">登录以查看您的数据分析</p>
          <a href="/auth" class="btn-primary">立即登录</a>
        </div>
      )}
    </div>
  </main>
</Layout>

<script>
  // Sign out functionality
  document.getElementById('signout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })

      const result = await response.json()

      if (result.success) {
        window.location.href = '/auth'
      } else {
        alert('退出登录失败，请重试')
      }
    } catch (error) {
      alert('网络错误，请重试')
    }
  })
</script>
