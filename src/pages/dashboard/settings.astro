---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// Check authentication
const { data: { session }, error } = await supabase.auth.getSession()

// Redirect to auth if not logged in (for now, we'll allow access for testing)
// if (!session) {
//   return Astro.redirect('/auth')
// }

const user = session?.user
---

<Layout title="设置 - Startup Ideas Tracker">
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gradient">
            <a href="/dashboard">Startup Ideas Tracker</a>
          </h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/dashboard" class="nav-link">控制台</a>
          <a href="/dashboard/ideas" class="nav-link">我的想法</a>
          <a href="/dashboard/analytics" class="nav-link">数据分析</a>
          <a href="/dashboard/settings" class="nav-link-active">设置</a>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center space-x-4">
          {user ? (
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-600">
                    {user.email?.charAt(0).toUpperCase()}
                  </span>
                </div>
                <span class="text-sm text-neutral-700 hidden sm:block">
                  {user.email}
                </span>
              </div>
              <button id="signout-btn" class="btn-ghost text-sm">
                退出登录
              </button>
            </div>
          ) : (
            <div class="flex items-center space-x-3">
              <a href="/auth" class="btn-ghost">登录</a>
              <a href="/auth" class="btn-primary">注册</a>
            </div>
          )}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 bg-neutral-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-neutral-800 to-neutral-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold sm:text-4xl mb-2">设置</h1>
            <p class="text-lg text-neutral-300">管理您的账户和偏好设置，个性化您的使用体验</p>
          </div>
          <div class="hidden sm:block">
            <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-white">设置已同步</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {user ? (
        <div class="space-y-8">
          <!-- Profile Settings -->
          <div class="card-elevated">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-neutral-900">个人资料</h3>
                <p class="text-sm text-neutral-600">管理您的个人信息和偏好设置</p>
              </div>
            </div>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-neutral-700 mb-2">
                    邮箱地址
                  </label>
                  <input 
                    type="email" 
                    value={user.email || ''} 
                    disabled
                    class="input bg-neutral-50 text-neutral-500"
                  />
                  <p class="text-xs text-neutral-500 mt-1">邮箱地址无法修改</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-neutral-700 mb-2">
                    显示名称
                  </label>
                  <input 
                    type="text" 
                    placeholder="输入您的显示名称"
                    class="input"
                  />
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-neutral-700 mb-2">
                  个人简介
                </label>
                <textarea 
                  rows="3"
                  placeholder="简单介绍一下您自己..."
                  class="textarea"
                ></textarea>
              </div>

              <div class="flex justify-end pt-4 border-t border-neutral-200">
                <button type="submit" class="btn-primary">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  保存更改
                </button>
              </div>
            </form>
          </div>

          <!-- Notification Settings -->
          <div class="card-elevated">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-secondary-500 to-accent-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 19h6v-2H4v2zM4 15h8v-2H4v2zM4 11h8V9H4v2z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-neutral-900">通知设置</h3>
                <p class="text-sm text-neutral-600">管理您的通知偏好和提醒设置</p>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-medium text-neutral-900">邮件通知</h4>
                  <p class="text-sm text-neutral-600">接收重要更新和提醒</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-neutral-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-neutral-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-medium text-neutral-900">AI分析完成通知</h4>
                  <p class="text-sm text-neutral-600">当AI完成想法分析时通知您</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-neutral-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-neutral-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-medium text-neutral-900">周报摘要</h4>
                  <p class="text-sm text-neutral-600">每周接收您的想法管理摘要</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer">
                  <div class="w-11 h-6 bg-neutral-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-neutral-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>
            </div>
          </div>

          <!-- AI Settings -->
          <div class="card-elevated">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-accent-500 to-primary-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-neutral-900">AI设置</h3>
                <p class="text-sm text-neutral-600">配置AI分析和增强功能的参数</p>
              </div>
            </div>
            <div class="space-y-6">
              <div>
                <label class="block text-sm font-medium text-neutral-700 mb-2">
                  AI分析深度
                </label>
                <select class="w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500">
                  <option value="basic">基础分析</option>
                  <option value="detailed" selected>详细分析</option>
                  <option value="comprehensive">全面分析</option>
                </select>
                <p class="text-xs text-neutral-500 mt-1">更深入的分析需要更多时间</p>
              </div>

              <div>
                <label class="block text-sm font-medium text-neutral-700 mb-2">
                  偏好的分析语言
                </label>
                <select class="w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500">
                  <option value="zh-CN" selected>简体中文</option>
                  <option value="en">English</option>
                  <option value="zh-TW">繁體中文</option>
                </select>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-medium text-neutral-900">自动AI增强</h4>
                  <p class="text-sm text-neutral-600">新想法自动进行AI分析</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-neutral-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-neutral-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>
            </div>
          </div>

          <!-- Privacy & Security -->
          <div class="card">
            <h3 class="text-lg font-semibold text-neutral-900 mb-6">隐私与安全</h3>
            <div class="space-y-4">
              <div>
                <button class="btn-secondary w-full justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                  </svg>
                  更改密码
                </button>
              </div>

              <div>
                <button class="btn-secondary w-full justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  导出我的数据
                </button>
              </div>

              <div class="border-t border-neutral-200 pt-4">
                <button class="btn text-red-600 hover:bg-red-50 w-full justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  删除账户
                </button>
                <p class="text-xs text-neutral-500 mt-2 text-center">
                  此操作不可撤销，将永久删除您的所有数据
                </p>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <!-- Unauthenticated State -->
        <div class="card text-center py-12">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-4">请先登录</h2>
          <p class="text-neutral-600 mb-6">登录以访问您的设置</p>
          <a href="/auth" class="btn-primary">立即登录</a>
        </div>
      )}
    </div>
  </main>
</Layout>

<script>
  // Sign out functionality
  document.getElementById('signout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })

      const result = await response.json()

      if (result.success) {
        window.location.href = '/auth'
      } else {
        alert('退出登录失败，请重试')
      }
    } catch (error) {
      alert('网络错误，请重试')
    }
  })

  // Settings form handling (placeholder)
  document.querySelectorAll('form').forEach(form => {
    form.addEventListener('submit', (e) => {
      e.preventDefault()
      alert('设置保存功能开发中，敬请期待...')
    })
  })

  // Button click handlers (placeholder)
  document.querySelectorAll('button[class*="btn"]').forEach(button => {
    if (!button.id && !button.type) {
      button.addEventListener('click', () => {
        alert('功能开发中，敬请期待...')
      })
    }
  })
</script>
