---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/Hero.astro'
import Features from '@/components/Features.astro'
import CTA from '@/components/CTA.astro'
import '@/styles/globals.css'

const title = "Startup Ideas Tracker - 现代化创业想法管理平台"
const description = "集成AI增强和PG评估框架的现代化创业想法管理平台，帮助您系统化管理和评估创业想法。"
---

<Layout title={title} description={description}>
  <!-- Navigation -->
  <nav class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-xl font-bold text-gradient">
              Startup Ideas Tracker
            </h1>
          </div>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="#features" class="nav-link">功能特色</a>
            <a href="#how-it-works" class="nav-link">工作原理</a>
            <a href="#pricing" class="nav-link">定价</a>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex items-center space-x-4">
          <a href="/auth" class="btn-ghost">登录</a>
          <a href="/dashboard" class="btn-primary">开始使用</a>
        </div>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button 
            type="button" 
            class="btn-ghost p-2"
            aria-controls="mobile-menu" 
            aria-expanded="false"
            id="mobile-menu-button"
          >
            <span class="sr-only">打开主菜单</span>
            <!-- Hamburger icon -->
            <svg class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 1.5rem; height: 1.5rem; max-width: 1.5rem; max-height: 1.5rem;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-neutral-200">
        <a href="#features" class="nav-link block">功能特色</a>
        <a href="#how-it-works" class="nav-link block">工作原理</a>
        <a href="#pricing" class="nav-link block">定价</a>
        <div class="pt-4 pb-3 border-t border-neutral-200">
          <div class="flex items-center space-x-3">
            <a href="/auth" class="btn-ghost w-full justify-center">登录</a>
            <a href="/dashboard" class="btn-primary w-full justify-center">开始使用</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1">
    <!-- Hero Section -->
    <Hero />
    
    <!-- Features Section -->
    <Features />
    
    <!-- How It Works Section -->
    <section id="how-it-works" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold text-neutral-900 sm:text-4xl">
            工作原理
          </h2>
          <p class="mt-4 text-lg text-neutral-600">
            简单三步，开始您的创业想法管理之旅
          </p>
        </div>
        
        <div class="mt-20">
          <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
            <!-- Step 1 -->
            <div class="text-center">
              <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary-100 rounded-full flex-shrink-0" style="width: 4rem; height: 4rem; max-width: 4rem; max-height: 4rem;">
                <span class="text-2xl font-bold text-primary-600">1</span>
              </div>
              <h3 class="mt-6 text-xl font-semibold text-neutral-900">记录想法</h3>
              <p class="mt-4 text-neutral-600">
                快速记录您的创业想法，包括问题陈述、目标用户和解决方案概述
              </p>
            </div>
            
            <!-- Step 2 -->
            <div class="text-center">
              <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary-100 rounded-full flex-shrink-0" style="width: 4rem; height: 4rem; max-width: 4rem; max-height: 4rem;">
                <span class="text-2xl font-bold text-primary-600">2</span>
              </div>
              <h3 class="mt-6 text-xl font-semibold text-neutral-900">AI增强</h3>
              <p class="mt-4 text-neutral-600">
                利用Gemini AI对您的想法进行深度分析，获得市场洞察和改进建议
              </p>
            </div>
            
            <!-- Step 3 -->
            <div class="text-center">
              <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary-100 rounded-full flex-shrink-0" style="width: 4rem; height: 4rem; max-width: 4rem; max-height: 4rem;">
                <span class="text-2xl font-bold text-primary-600">3</span>
              </div>
              <h3 class="mt-6 text-xl font-semibold text-neutral-900">PG评估</h3>
              <p class="mt-4 text-neutral-600">
                使用Paul Graham的评估框架，系统化评估想法的可行性和潜力
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <CTA />
  </main>

  <!-- Footer -->
  <footer class="bg-neutral-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold text-gradient mb-4">
            Startup Ideas Tracker
          </h3>
          <p class="text-neutral-400 mb-4">
            现代化的创业想法管理平台，集成AI增强和PG评估框架，帮助创业者系统化管理和评估创业想法。
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-neutral-400 hover:text-white transition-colors group">
              <span class="sr-only">GitHub</span>
              <div class="w-6 h-6 bg-neutral-400 group-hover:bg-white rounded-full flex items-center justify-center text-neutral-900 font-bold text-sm transition-colors">
                G
              </div>
            </a>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-semibold mb-4">快速链接</h4>
          <ul class="space-y-2">
            <li><a href="/dashboard" class="text-neutral-400 hover:text-white transition-colors">控制台</a></li>
            <li><a href="/auth" class="text-neutral-400 hover:text-white transition-colors">登录</a></li>
            <li><a href="#features" class="text-neutral-400 hover:text-white transition-colors">功能特色</a></li>
            <li><a href="#pricing" class="text-neutral-400 hover:text-white transition-colors">定价</a></li>
          </ul>
        </div>
        
        <!-- Support -->
        <div>
          <h4 class="text-lg font-semibold mb-4">支持</h4>
          <ul class="space-y-2">
            <li><a href="/docs" class="text-neutral-400 hover:text-white transition-colors">文档</a></li>
            <li><a href="/help" class="text-neutral-400 hover:text-white transition-colors">帮助中心</a></li>
            <li><a href="/contact" class="text-neutral-400 hover:text-white transition-colors">联系我们</a></li>
            <li><a href="/privacy" class="text-neutral-400 hover:text-white transition-colors">隐私政策</a></li>
          </ul>
        </div>
      </div>
      
      <div class="mt-8 pt-8 border-t border-neutral-800 text-center">
        <p class="text-neutral-400">
          © 2025 Startup Ideas Tracker. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</Layout>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button')
    const mobileMenu = document.getElementById('mobile-menu')
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true'
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString())
        mobileMenu.classList.toggle('hidden')
      })
    }
  })
</script>
